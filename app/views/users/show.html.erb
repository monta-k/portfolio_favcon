<div class="user-info">
  <h2><%= @user.username %></h2>
</div>

<div class="post-list">
  <ul class="row">
    <% @posts.each do |post| %>
      <li>
        <h4> <%= post.trackName %></h4>
        <h5><%= post.artistName %></h5>
        <div class="content">
          <p><%= post.content %></p>
        </div>
        <%= link_to user_path(post.user) do %>
          <h6><%= post.user.username %></h6>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
